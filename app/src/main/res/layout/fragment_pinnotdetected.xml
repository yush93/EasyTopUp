<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.pinnotdetected">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:text="PIN not Detected - Reasons"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low Lighting"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN Area not scratched properly"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="1dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not Focused"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PIN scratched off"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not cropped properly"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

</LinearLayout>
